<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <!--<ImageView-->
    <!--android:id="@+id/video_img"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0dp"-->
    <!--android:layout_weight="2"-->
    <!--android:scaleType="fitXY"/>-->
    <RelativeLayout
        android:id="@+id/realplay_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


        <SurfaceView
            android:id="@+id/realplay_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/video_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/device_not_online"
            android:textSize="18sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/video_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/anim_probar_bg"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@mipmap/video_back">

        <RelativeLayout
            android:id="@+id/btn_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_10dp">


            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/capture_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cap_pic_back_on"/>

            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@mipmap/cap_pic"/>

            <TextView
                android:id="@+id/des_cap"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_left_10dp"
                android:text="对 当 前 监 控 视 频 的 图 像 进 行 抓 拍"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>

            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/album_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/album_pic_on"/>

            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:src="@mipmap/album_pic"
                />


            <TextView
                android:id="@+id/des_album"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_left_10dp"
                android:text="抓 拍 后 存 储 的 图 片 集 合"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>


            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/upload_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/upload_pic_on"/>

            <com.fjrcloud.lin.util.custom_view.MenuViewItem
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:src="@mipmap/upload_pic"/>


            <TextView
                android:id="@+id/des_upload"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dimen_left_10dp"
                android:text="将 抓 拍 后 的 图 片 发 送 至 管 理 员"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="gone"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/call_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@mipmap/call_policy"/>

    </RelativeLayout>

</LinearLayout>
